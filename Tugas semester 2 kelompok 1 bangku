        "laptop = Laptop(\"ROG Zephyrus\", 20_000_000, \"Ryzen 9\")\n",
        "hp = Smartphone(\"iPhone 13\", 15_000_000, \"12MP\")\n",
        "\n",
        "laptop.tambah_stok(10)\n",
